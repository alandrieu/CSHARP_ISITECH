<Window x:Class="ProjetCsharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProjetCSharp">
    
    <!-- Grid Principal -->
    <Grid x:Name="myMainGrid" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" Grid.Row="0">My APPLICATION</TextBlock>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" />

        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="2" Grid.Column="0">
            <StackPanel x:Name="myInputContainer" Grid.Row="2">

        </StackPanel>
        </ScrollViewer>
        
        <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch" />


        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="4" Grid.Column="0">
            
            <StackPanel x:Name="myOutputContainer">
                <TextBlock FontSize="18"> Contact List</TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
